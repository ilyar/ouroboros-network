cabal-version: 2.4

name:                   ouroboros-consensus-shelley-test
version:                0.1.0.0
synopsis:               Test infrastructure for Shelley
license:                Apache-2.0
license-files:          LICENSE
                        NOTICE
copyright:              2020-2021 Input Output (Hong Kong) Ltd.
author:                 IOHK Engineering Team
maintainer:             operations@iohk.io
category:               Network
build-type:             Simple

source-repository head
  type:     git
  location: https://github.com/input-output-hk/ouroboros-network

common base
  build-depends:        base >= 4.12 && < 4.15

common project-config
  default-language:     Haskell2010

  ghc-options:          -Werror

  if impl(ghc >= 8.10)
    ghc-options:        -Wunused-packages

library
  import:               base, project-config

  hs-source-dirs:      src

  exposed-modules:
                       Test.Consensus.Shelley.Examples
                       Test.Consensus.Shelley.Generators
                       Test.Consensus.Shelley.MockCrypto
                       Test.ThreadNet.Infra.Shelley
                       Test.ThreadNet.TxGen.Shelley

  build-depends:       bytestring        >=0.10  && <0.11
                     , cardano-binary
                     , cardano-crypto-class
                     , cardano-prelude
                     , cardano-slotting
                     , containers        >=0.5   && <0.7
                     , data-default-class
                     , generic-random
                     , quiet             >=0.2   && <0.3
                     , mtl               >=2.2   && <2.3
                     , QuickCheck
                     , time
                     , transformers

                     , cardano-ledger-shelley-ma
                     , cardano-ledger-shelley-ma-test
                     , shelley-spec-ledger
                     , shelley-spec-ledger-test
                     , small-steps

                     , ouroboros-network
                     , ouroboros-consensus
                     , ouroboros-consensus-test
                     , ouroboros-consensus-shelley

  ghc-options:         -Wall
                       -Wcompat
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wpartial-fields
                       -Widentities
                       -Wredundant-constraints
                       -Wmissing-export-lists
                       -fno-ignore-asserts

test-suite test
  import:               base, project-config

  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  other-modules:
                       Test.Consensus.Shelley.Golden
                       Test.Consensus.Shelley.Serialisation
                       Test.ThreadNet.Shelley

  build-depends:       bytestring
                     , cardano-crypto-class
                     , cardano-slotting
                     , cborg
                     , containers
                     , QuickCheck
                     , tasty
                     , tasty-quickcheck

                     , shelley-spec-ledger

                     , ouroboros-network
                     , ouroboros-consensus
                     , ouroboros-consensus-test
                     , ouroboros-consensus-shelley
                     , ouroboros-consensus-shelley-test

  ghc-options:         -Wall
                       -Wcompat
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wpartial-fields
                       -Widentities
                       -Wredundant-constraints
                       -Wmissing-export-lists
                       -fno-ignore-asserts
                       -threaded
                       -rtsopts
